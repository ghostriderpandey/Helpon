    function GetpartialView(e, c,n) {

        var d = {
            id: @ViewBag.MID,
            cid: c,
            name:n
        };
        console.log(d);
        $.ajax({
            type: "POST",
            url: e,
            data: JSON.stringify(d),
            dataType: "html",
            contentType: 'application/json; charset=utf-8',
            beforeSend: function () {
                $(".loaderbox").css("display", "flex");
            },
            success: function (data) {
                $('#partialView').html('');
                $('#partialView').html(data);
            },
            complete: function () {
                $(".loaderbox").css("display", "none");
            },
            error: function () {

            }
        });
    }

    function GoToCart() {
        GetpartialView('/Cart/_Cart',0);
    }
    function GoBack() {
        GetpartialView('/Merchant/_MerchantProduct',0);
    }
    var Categoryid = 0;
    $(".nav-link").each(function () {
        $(this).click(function () {
            Categoryid= $(this).attr('data-id');
            $(".nav-link").removeClass("active");
            $(this).addClass("active");
            GetpartialView('/Merchant/_MerchantProduct', Categoryid);
        });
    });
    $("#btnSearchProduct").click(function () {
        var name = $("#txtSearchproduct").val();
        GetpartialView('/Merchant/_MerchantProduct', 0,name);

    });
    var Islogin = '@HelpOn.Helper.SessionHelper.Islogin';
    function AddToCart(p, q) {

        if (Islogin == 'False') {
            $('#LoginModalCenter').modal('show');
            return;
        }
        event.preventDefault();
        var Cart = {
            PID: p,
            Qty: q
        };
        $.ajax({
            type: "POST",
            url: "/Cart/AddToCart",
            data: JSON.stringify(Cart),
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            beforeSend: function () {
                $(".loaderbox").css("display", "flex");
            },
            success: function (data) {
                if (data.Status > 0) {
                    GetpartialView('/Merchant/_MerchantProduct',0);
                }
                else {
                    swal('Alert', data.Message, 'error');
                }

            },
            complete: function () {
                $(".loaderbox").css("display", "none");
            },
            error: function () {

            }
        });
    }
    function DeleteCart(p) {

        if (Islogin == 'False') {
            $('#LoginModalCenter').modal('show');
            return;
        }
        event.preventDefault();
        var Cart = {
            PID: p
        };
        $.ajax({
            type: "POST",
            url: "/Cart/DeleteCart",
            data: JSON.stringify(Cart),
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            beforeSend: function () {
                $(".loaderbox").css("display", "flex");
            },
            success: function (data) {
                if (data.Status > 0) {
                    GetpartialView('/Cart/_Cart', 0);
                }
                else {
                    swal('Alert', data.Message, 'error');
                }

            },
            complete: function () {
                $(".loaderbox").css("display", "none");
            },
            error: function () {

            }
        });
    }
    $(".ratingStar").each(function () {
        $(this).click(function () {
            var star = $(this).attr('data-star');

            $("#hndRating").val(star);
        });
    });
    $("#formReviewSubmit").submit(function (e) {
        e.preventDefault(e);
        var url = $('#formReviewSubmit')[0].action;
        $.ajax({
            type: "POST",
            url: url,
            data: $('#formReviewSubmit').serialize(),
            success: function (data) {
                if (data.Status > 0) {

                    swal('Alert', data.Message, 'success').then((value) => { location.reload(); });
                }
                else {
                    swal('Alert', data.Message, 'error');
                }
            },
            error: function (xhr, status, error) {

            }
        })
    });
