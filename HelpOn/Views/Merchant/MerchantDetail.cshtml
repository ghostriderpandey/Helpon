<style>
    .gallery {
        margin: 0px;
    }

        .gallery img {
            height: 100px !important;
            width: 100px !important;
            ;
            transition: 0.5s;
            padding: 2px;
            object-fit: contain;
            border: 1px solid;
            margin-left: 5px;
            margin-top: 10px;
        }

            .gallery img:hover {
                filter: drop-shadow(4px 4px 6px gray);
                transform: scale(1.1);
            }

    .rate {
        float: left;
        height: 46px;
        padding: 0 10px;
    }

        .rate:not(:checked) > input {
            position: absolute;
            top: -9999px;
        }

        .rate:not(:checked) > label {
            float: right;
            width: 1em;
            overflow: hidden;
            white-space: nowrap;
            cursor: pointer;
            font-size: 30px;
            color: #ccc;
        }

            .rate:not(:checked) > label:before {
                content: '★ ';
            }

        .rate > input:checked ~ label {
            color: #ffc700;
        }

        .rate:not(:checked) > label:hover,
        .rate:not(:checked) > label:hover ~ label {
            color: #deb217;
        }

        .rate > input:checked + label:hover,
        .rate > input:checked + label:hover ~ label,
        .rate > input:checked ~ label:hover,
        .rate > input:checked ~ label:hover ~ label,
        .rate > label:hover ~ input:checked ~ label {
            color: #c59b08;
        }
</style>
