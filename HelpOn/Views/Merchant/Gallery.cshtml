
@model List<HelpOn.Models.GalleryModel>
@{
    ViewBag.Title = "Gellery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .gallery {
        margin: 0px;
    }

        .gallery img {
            width: 270px;
            height: 250px;
            transition: 0.5s;
            padding: 5px;
            object-fit: contain;
            border: 1px solid;
            margin-left: 5px;
        }

            .gallery img:hover {
                filter: drop-shadow(4px 4px 6px gray);
                transform: scale(1.1);
            }
</style>
<div class="container">
    <div class="card">
        <div class="card-body">
            <h5>Gallery</h5>
            <hr />
            <div class="gallery">
                @foreach (var item in Model)
                {
                    <a href="@item.IMG" data-lightbox="mygallery">
                        <img src="@item.IMG">
                    </a>
                }
            </div>
        </div>
    </div>
</div>

